{
  "name": "atlas-config",
  "version": "1.0.0",
  "orchestration": {
    "maxConcurrentAgents": 5,
    "loadBalancing": {
      "strategy": "round-robin",
      "healthCheckInterval": 30000
    },
    "fallback": {
      "enabled": true,
      "maxRetries": 3
    }
  },
  "analysis": {
    "complexity": {
      "maxCyclomaticComplexity": 10,
      "maxCognitiveComplexity": 15,
      "maxNestingDepth": 4
    },
    "chaos": {
      "thresholds": {
        "low": 30,
        "medium": 60,
        "high": 80
      }
    }
  },
  "refactoring": {
    "safety": {
      "requireTests": true,
      "maxChangesPerCommit": 50,
      "autoRollback": true
    },
    "suggestions": {
      "minConfidence": 0.7,
      "maxPerFile": 10
    }
  },
  "services": {
    "monitoring": {
      "enabled": true,
      "metricsInterval": 60000
    },
    "scheduler": {
      "enabled": true,
      "defaultCron": "0 0 * * *"
    }
  }
}
