{
  "yoloMode": {
    "enabled": true,
    "strictMode": false,
    "autoApprovalEnabled": true,
    "safetyChecksEnabled": true,
    "description": "YOLO Mode Configuration - Ultra-Deep Thinking, Autonomous Execution"
  },
  "autoApprovalRules": {
    "documentation": {
      "enabled": true,
      "patterns": ["*.md", "docs/**/*.md", "**/*.md"],
      "action": "auto-approve",
      "reason": "Documentation updates are safe and beneficial"
    },
    "formatting": {
      "enabled": true,
      "patterns": ["prettier", "eslint --fix", "format"],
      "action": "auto-approve",
      "reason": "Code formatting improves consistency"
    },
    "testing": {
      "enabled": true,
      "patterns": ["jest", "test", "test:*"],
      "action": "auto-approve",
      "reason": "Testing validates code quality"
    },
    "validation": {
      "enabled": true,
      "patterns": ["validate", "type-check", "lint"],
      "action": "auto-approve",
      "reason": "Validation checks ensure quality"
    },
    "structureOrganization": {
      "enabled": true,
      "patterns": ["mkdir", "create", "organize"],
      "action": "auto-approve",
      "reason": "Repo structure improvements are safe"
    },
    "commitMessages": {
      "enabled": true,
      "patterns": ["feat:", "fix:", "chore:", "refactor:"],
      "action": "auto-approve",
      "reason": "Conventional commits enable automation"
    }
  },
  "restrictedOperations": {
    "enabled": true,
    "requiresManualApproval": [
      "rm -rf /",
      "git push --force",
      "DROP DATABASE",
      "DELETE FROM",
      "destructive-operation"
    ],
    "reason": "Safety guardrails prevent irreversible damage"
  },
  "safetyLimits": {
    "maxFileDeletions": 1000,
    "maxDirectoryDeletions": 100,
    "maxFileSizeForAutoApproval": "100MB",
    "maxConcurrentOperations": 50,
    "rollbackOnError": true,
    "createBackupBeforeMajorChanges": true
  },
  "orchestrationSettings": {
    "parallelExecutionEnabled": true,
    "maxParallelTasks": 10,
    "progressTrackingEnabled": true,
    "realTimeValidationEnabled": true,
    "interactiveLoggingEnabled": true
  },
  "integratedTools": {
    "mcpServers": {
      "enabled": true,
      "autoInitialize": true,
      "registry": ".tools/automation/integrations/mcp/registry.json"
    },
    "gitHooks": {
      "enabled": true,
      "preCommitHooks": true,
      "prePushHooks": true
    },
    "cicdPipeline": {
      "enabled": true,
      "githubActions": true,
      "autoValidation": true
    }
  },
  "governanceCompliance": {
    "enforceStandards": true,
    "validateBefore": true,
    "autoFix": true,
    "complianceChecking": "comprehensive",
    "requiresApprovalFor": [
      "major-version-bump",
      "breaking-changes",
      "security-related"
    ]
  },
  "executionModes": {
    "ultraDeepThinking": {
      "enabled": true,
      "analyzeMultipleSolutions": true,
      "evaluateRisks": true,
      "optimizeForQuality": true
    },
    "autonomousExecution": {
      "enabled": true,
      "noUserInteractionRequired": true,
      "intelligentDecisionMaking": true,
      "realTimeProgressReporting": true
    },
    "adaptiveOptimization": {
      "enabled": true,
      "learnsFromFeedback": true,
      "improvesIteratively": true,
      "optimizesContinuously": true
    }
  },
  "workflowOrchestration": {
    "enabled": true,
    "parallelPhases": true,
    "errorRecovery": "automatic",
    "progressDashboard": true,
    "detailedLogging": true
  },
  "validationFramework": {
    "compreh ensiveValidation": true,
    "beforeExecution": true,
    "afterExecution": true,
    "continuousMonitoring": true,
    "automaticReporting": true
  },
  "successCriteria": {
    "documentationOrganized": "100%",
    "repositoryStructured": "100%",
    "validationPassing": "100%",
    "governanceCompliant": "100%",
    "yoloModeFunctional": "100%"
  }
}
