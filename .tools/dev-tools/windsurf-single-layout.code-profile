{
  "name": "Windsurf Single Layout",
  "settings": {
    "window.openFilesInNewWindow": "off",
    "window.openFoldersInNewWindow": "off",
    "window.restoreWindows": "preserve",
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editor.enablePreviewFromCodeNavigation": false,
    "workbench.editor.openPositioning": "right",
    "workbench.editor.closeEmptyGroups": true,
    "workbench.editor.showTabs": true,
    "workbench.editor.revealIfOpen": false,
    "workbench.editor.restoreViewState": true,
    "explorer.openEditors.visible": 0,
    "explorer.autoReveal": false,
    "workbench.list.openMode": "doubleClick",
    "workbench.startupEditor": "none",
    "editor.stablePeek": true,
    "editor.gotoLocation.multipleDefinitions": "peek",
    "editor.gotoLocation.multipleImplementations": "peek",
    "editor.gotoLocation.multipleTypeDefinitions": "peek",
    "editor.gotoLocation.multipleReferences": "peek",
    "mergeEditor.enabled": false,
    "problems.autoReveal": false,
    "workbench.panel.opensMaximized": "never",
    "debug.focusWindowOnBreakpoints": false,
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000
  },
  "keybindings": [
    { "command": "-workbench.action.splitEditor", "key": "" },
    { "command": "-workbench.action.splitEditorOrthogonal", "key": "" },
    { "command": "-workbench.action.openEditorToTheSide", "key": "" },
    { "command": "-workbench.action.focusFirstEditorGroup", "key": "" },
    { "command": "-workbench.action.focusSecondEditorGroup", "key": "" },
    { "command": "-workbench.action.focusThirdEditorGroup", "key": "" },
    { "command": "-workbench.action.newGroupLeft", "key": "" },
    { "command": "-workbench.action.newGroupRight", "key": "" },
    { "command": "-workbench.action.newGroupAbove", "key": "" },
    { "command": "-workbench.action.newGroupBelow", "key": "" },
    { "command": "-workbench.action.moveActiveEditorGroupLeft", "key": "" },
    { "command": "-workbench.action.moveActiveEditorGroupRight", "key": "" },
    { "command": "-workbench.action.moveActiveEditorGroupUp", "key": "" },
    { "command": "-workbench.action.moveActiveEditorGroupDown", "key": "" }
  ]
}
