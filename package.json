{
  "name": "github-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "A monorepo for various projects.",
  "scripts": {
    "prepare": "husky install",
    "dev:setup": "bash scripts/setup-dev.sh",
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --config jest.config.js --watch",
    "test:coverage": "jest --config jest.config.js --coverage",
    "test:ci": "jest --config jest.config.js --ci --coverage",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,yml,yaml}\"",
    "type-check": "tsc --noEmit",
    "security:scan": "bash scripts/security-scan.sh",
    "security:audit": "npm audit --production && npm audit fix",
    "validate": "node .governance/validators/repository-validator.js",
    "clean": "rimraf .turbo node_modules dist build coverage .next",
    "clean:install": "npm run clean && npm install",
    "precommit": "lint-staged",
    "prepush": "npm run validate",
    "prebuild": "npm run clean",
    "start": "node -e \"console.log('Dev orchestrated via turbo. Use package-level dev scripts or run \\`npx turbo run dev --filter <pkg>\\`.')\"",
    "analyze": "npm run lint && npm run test:coverage",
    "check": "npm run lint && npm run test && npm run build",
    "update": "npm update && npm audit fix",
    "docs:audit": "node scripts/doc_audit.js",
    "validate:fix": "node .governance/validators/repository-validator.js --fix",
    "cleanup": "node .governance/scripts/automated-cleanup.js",
    "track": "node .governance/registry/file-tracking-system.js",
    "governance:install": "node .governance/setup/install-governance.js",
    "governance:check": "npm run lint && npm run format:check && npm run type-check && npm run test && npm run validate",
    "governance:fix": "npm run lint:fix && npm run format && npm run validate:fix",
    "gov": "node .metaHub/governance/governance-orchestrator.js",
    "gov:status": "node .metaHub/governance/governance-orchestrator.js status",
    "gov:check": "node .metaHub/governance/governance-orchestrator.js validate",
    "gov:fix": "node .metaHub/governance/governance-orchestrator.js fix",
    "gov:report": "node .metaHub/governance/governance-orchestrator.js report",
    "gov:dashboard": "start .metaHub/governance/dashboard/governance-dashboard.html",
    "gov:audit": "node .metaHub/governance/audit/audit-system.js",
    "gov:clean": "node .metaHub/governance/scripts/automated-cleanup.js",
    "gov:archive": "node .metaHub/governance/scripts/archive-manager.js",
    "gov:track": "node .metaHub/governance/registry/file-tracking-system.js"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.28.5",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.20",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "doctoc": "^2.2.1",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-config-react-app": "^7.0.1",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.2.0",
    "eslint-plugin-jsdoc": "^61.4.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jsdoc": "^4.0.5",
    "lint-staged": "^15.2.10",
    "ms": "^2.1.3",
    "nodemon": "^3.1.11",
    "pnpm": "^10.23.0",
    "prettier": "^3.2.5",
    "rimraf": "^6.1.2",
    "supertest": "^7.1.4",
    "turbo": "^1.12.4",
    "typedoc": "^0.28.14",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "eslintIgnore": [
    "templates/**",
    "alaweimm90/**",
    ".metaHub/**",
    ".organizations/**",
    ".tools/automation/**"
  ],
  "engines": {
    "node": ">=18",
    "pnpm": ">=9"
  },
  "packageManager": "pnpm@9",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "chalk": "^4.1.2",
    "dotenv": "^17.2.3",
    "express": "^4.18.0",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "fs.realpath": "^1.0.0",
    "glob": "^7.2.3",
    "helmet": "^8.1.0",
    "path-is-absolute": "^1.0.1",
    "uuid": "^9.0.1",
    "winston": "^3.18.3",
    "ws": "^8.18.3"
  }
}
