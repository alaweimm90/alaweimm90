{
  "name": "Engineering Excellence Framework - ADR Template",
  "description": "Standard template for Architecture Decision Records in the framework",
  "version": "1.0.0",
  "schema": {
    "type": "object",
    "properties": {
      "number": {
        "type": "string",
        "pattern": "^\\d{4}$",
        "description": "Sequential ADR number (padded to 4 digits)"
      },
      "title": {
        "type": "string",
        "minLength": 10,
        "maxLength": 100,
        "description": "Descriptive title of the decision"
      },
      "date": {
        "type": "string",
        "format": "date",
        "description": "Date ADR was created"
      },
      "status": {
        "type": "string",
        "enum": ["Draft", "Proposed", "Accepted", "Implemented", "Superseded", "Rejected"],
        "description": "Current status of the ADR"
      },
      "context": {
        "type": "object",
        "properties": {
          "problem": {"type": "string", "minLength": 50},
          "currentState": {"type": "string"},
          "businessImpact": {"type": "string"},
          "constraints": {"type": "array", "items": {"type": "string"}},
          "stakeholders": {"type": "array", "items": {"type": "string"}}
        },
        "required": ["problem"]
      },
      "decision": {
        "type": "object",
        "properties": {
          "statement": {"type": "string", "minLength": 20},
          "rationale": {"type": "string", "minLength": 50},
          "assumptions": {"type": "array", "items": {"type": "string"}}
        },
        "required": ["statement", "rationale"]
      },
      "alternatives": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {"type": "string"},
            "description": {"type": "string"},
            "pros": {"type": "array", "items": {"type": "string"}},
            "cons": {"type": "array", "items": {"type": "string"}},
            "rejectedBecause": {"type": "string"}
          }
        }
      },
      "implementation": {
        "type": "object",
        "properties": {
          "architectureChanges": {"type": "array", "items": {"type": "string"}},
          "testingStrategy": {"type": "string"},
          "monitoring": {"type": "string"},
          "rollback": {"type": "string"}
        }
      },
      "risks": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "category": {"enum": ["Technical", "Business", "Operational"]},
            "description": {"type": "string"},
            "impact": {"enum": ["High", "Medium", "Low"]},
            "probability": {"enum": ["High", "Medium", "Low"]},
            "mitigation": {"type": "string"}
          }
        }
      },
      "timeline": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "phase": {"type": "string"},
            "duration": {"type": "string"},
            "milestones": {"type": "array", "items": {"type": "string"}}
          }
        }
      },
      "authors": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {"type": "string"},
            "role": {"enum": ["Author", "Technical Review", "Architecture Approval", "Business Approval"]}
          }
        }
      }
    },
    "required": ["number", "title", "date", "status", "context", "decision"]
  }
}
