{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Multi-Organization Project Registry",
  "description": "Comprehensive registry for managing multiple organizations and projects",
  "type": "object",
  "required": ["version", "organizations", "projects"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "lastUpdated": {
      "type": "string",
      "format": "date-time"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "totalProjects": { "type": "integer" },
        "totalOrganizations": { "type": "integer" },
        "containerizationRate": { "type": "number", "minimum": 0, "maximum": 1 },
        "cicdRate": { "type": "number", "minimum": 0, "maximum": 1 }
      }
    },
    "organizations": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9-_]+$": {
          "type": "object",
          "required": ["id", "name", "type", "priority", "path"],
          "properties": {
            "id": { "type": "string", "pattern": "^org-\\d{3}$" },
            "name": { "type": "string" },
            "type": { "enum": ["company", "product", "personal", "client"] },
            "priority": { "enum": ["critical", "high", "medium", "low"] },
            "path": { "type": "string" },
            "projects": { "type": "array", "items": { "type": "string" } }
          }
        }
      }
    },
    "projects": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "organizationId", "status", "category", "techStack", "containerized", "cicd"],
        "properties": {
          "id": { "type": "string", "pattern": "^proj-\\d{3}$" },
          "name": { "type": "string" },
          "organizationId": { "type": "string", "pattern": "^org-\\d{3}$" },
          "status": { "enum": ["production", "staging", "development", "deprecated", "broken", "planned"] },
          "category": {
            "enum": ["backend-service", "frontend-app", "fullstack-app", "library", "tool", "infrastructure", "data-pipeline", "api", "website", "mobile-app"]
          },
          "techStack": {
            "type": "array",
            "items": { "type": "string" }
          },
          "containerized": { "type": "boolean" },
          "cicd": { "type": "boolean" },
          "priority": { "enum": ["critical", "high", "medium", "low"] },
          "healthScore": { "type": "integer", "minimum": 0, "maximum": 10 },
          "path": { "type": "string" },
          "repository": { "type": "string", "format": "uri" },
          "isSubmodule": { "type": "boolean", "default": false },
          "dependencies": { "type": "array", "items": { "type": "string" } },
          "metrics": {
            "type": "object",
            "properties": {
              "users": { "type": "integer" },
              "uptime": { "type": "number", "minimum": 0, "maximum": 1 },
              "lastDeployment": { "type": "string", "format": "date-time" },
              "deploymentFrequency": { "enum": ["multiple-daily", "daily", "weekly", "monthly", "manual", "never"] }
            }
          },
          "styleEnforcement": {
            "type": "object",
            "properties": {
              "codeStyle": { "type": "string", "description": "Path to code style config" },
              "writingStyle": { "type": "string", "description": "Path to writing style guide" },
              "aiConventions": { "type": "string", "description": "Path to AI agent conventions" }
            }
          }
        }
      }
    },
    "llmConfig": {
      "type": "object",
      "description": "Configuration for multi-LLM workflow optimization",
      "properties": {
        "primaryModels": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "provider", "useCases"],
            "properties": {
              "name": { "type": "string" },
              "provider": { "type": "string" },
              "useCases": { "type": "array", "items": { "type": "string" } },
              "subscriptionLimit": { "type": "string" },
              "cost": { "enum": ["low", "medium", "high"] }
            }
          }
        },
        "taskRouting": {
          "type": "object",
          "description": "Maps task types to preferred LLM",
          "patternProperties": {
            "^[a-z-]+$": { "type": "string" }
          }
        }
      }
    }
  }
}
