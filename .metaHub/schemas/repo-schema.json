{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": ".meta/repo.yaml Schema",
  "description": "Schema definition for repository metadata file",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "description": "Repository type classification (library, tool, demo, research, adapter, meta, or custom)"
    },
    "tier": {
      "type": "integer",
      "minimum": 1,
      "maximum": 4,
      "description": "Criticality tier (1=mission-critical, 2=important, 3=experimental, 4=unknown)"
    },
    "language": {
      "type": "string",
      "description": "Primary programming language (python, typescript, go, rust, mixed, etc.)"
    },
    "coverage": {
      "type": "object",
      "description": "Test coverage configuration",
      "properties": {
        "target": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100,
          "description": "Target coverage percentage"
        },
        "lines": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100,
          "description": "Minimum line coverage percentage"
        }
      }
    },
    "docs": {
      "type": "object",
      "description": "Documentation profile",
      "properties": {
        "profile": {
          "type": "string",
          "enum": ["standard", "minimal"],
          "description": "Documentation level (standard=full docs/ tree, minimal=README only)"
        }
      }
    },
    "interfaces": {
      "type": "object",
      "description": "Public interfaces exposed by this repository",
      "properties": {
        "cli": {
          "type": "boolean",
          "description": "Provides CLI interface"
        },
        "api": {
          "type": "boolean",
          "description": "Provides API interface"
        }
      }
    },
    "owner": {
      "type": "string",
      "description": "Owner or team responsible for this repository"
    },
    "description": {
      "type": "string",
      "description": "Brief description of the repository"
    },
    "status": {
      "type": "string",
      "enum": ["active", "archived", "deprecated", "unknown"],
      "description": "Repository lifecycle status"
    },
    "created": {
      "type": "string",
      "format": "date",
      "description": "Date the repository was created (YYYY-MM-DD)"
    }
  },
  "required": ["type", "language"],
  "additionalProperties": false
}
