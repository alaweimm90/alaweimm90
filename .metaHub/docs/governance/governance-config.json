{
  "version": "1.0.0",
  "lastUpdated": "2025-11-22",
  "governance": {
    "strictMode": true,
    "autoEnforce": true,
    "auditLevel": "comprehensive",
    "complianceFrameworks": ["SOC2", "PCI-DSS", "GDPR", "ISO-27001"]
  },
  "repositoryStandards": {
    "structure": {
      "mandatoryFiles": [
        "README.md",
        "LICENSE",
        "SECURITY.md",
        ".gitignore",
        "CONTRIBUTING.md",
        "CODE_OF_CONDUCT.md"
      ],
      "mandatoryDirectories": ["docs/", "tests/", ".github/", "src/"],
      "optionalDirectories": ["examples/", "scripts/", "config/", "assets/"]
    },
    "naming": {
      "projects": "^[a-z0-9-]+$",
      "files": {
        "pattern": "kebab-case",
        "exceptions": ["README.md", "LICENSE", "CHANGELOG.md", "SECURITY.md"]
      },
      "directories": "lowercase",
      "branches": {
        "main": "main",
        "development": "develop",
        "feature": "feature/*",
        "bugfix": "bugfix/*",
        "hotfix": "hotfix/*",
        "release": "release/*"
      }
    },
    "documentation": {
      "required": true,
      "minCoverage": 80,
      "autoGenerate": true,
      "syncWithCode": true,
      "formats": ["markdown", "jsdoc", "tsdoc"]
    }
  },
  "compliance": {
    "enforcement": {
      "preCommit": true,
      "preMerge": true,
      "scheduled": "daily",
      "blocking": true
    },
    "checks": {
      "linting": {
        "enabled": true,
        "tools": ["eslint", "prettier", "stylelint"],
        "autoFix": true
      },
      "typeChecking": {
        "enabled": true,
        "strict": true,
        "tools": ["typescript"]
      },
      "security": {
        "enabled": true,
        "tools": ["snyk", "bandit", "trivy", "gitleaks"],
        "blockOnVulnerabilities": true
      },
      "documentation": {
        "enabled": true,
        "requireChangelog": true,
        "requireApiDocs": true
      }
    }
  },
  "fileTracking": {
    "enabled": true,
    "trackMetadata": true,
    "attributes": [
      "createdAt",
      "modifiedAt",
      "lastAccessed",
      "owner",
      "status",
      "completeness",
      "documentationLink"
    ],
    "lifecycle": {
      "archiveAfterDays": 90,
      "warnAfterDays": 60,
      "deleteAfterDays": 365
    }
  },
  "visualOrganization": {
    "statusIndicators": {
      "completed": "‚úÖ",
      "inProgress": "üîÑ",
      "pending": "‚è≥",
      "blocked": "üö´",
      "deprecated": "‚ö†Ô∏è",
      "archived": "üì¶"
    },
    "colorCoding": {
      "critical": "#FF0000",
      "high": "#FF8C00",
      "medium": "#FFD700",
      "low": "#90EE90",
      "info": "#87CEEB"
    },
    "dashboards": {
      "enabled": true,
      "updateFrequency": "realtime"
    }
  },
  "automation": {
    "workflows": {
      "onPush": ["lint", "test", "security-scan", "documentation-check"],
      "onPullRequest": ["full-compliance-check", "code-review", "documentation-sync"],
      "scheduled": {
        "daily": ["security-audit", "dependency-update", "file-cleanup"],
        "weekly": ["compliance-report", "metrics-generation"],
        "monthly": ["full-audit", "archive-old-files"]
      }
    },
    "notifications": {
      "slack": true,
      "email": true,
      "dashboard": true
    }
  },
  "audit": {
    "enabled": true,
    "logLevel": "verbose",
    "retention": "365 days",
    "includeActions": [
      "file-create",
      "file-modify",
      "file-delete",
      "permission-change",
      "compliance-violation",
      "security-issue",
      "automation-action"
    ],
    "exportFormats": ["json", "csv", "pdf"]
  },
  "integrations": {
    "piecesOS": {
      "enabled": true,
      "autoSync": true,
      "contextPreservation": true
    },
    "githubActions": {
      "enabled": true,
      "requiredWorkflows": 20
    },
    "mcp": {
      "enabled": true,
      "protocols": 14
    },
    "developmentTools": {
      "vscode": true,
      "preCommitHooks": true,
      "huskyEnabled": true
    }
  }
}
