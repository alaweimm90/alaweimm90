{
  // ============================================
  // SSOT: IDE Configuration for All Projects
  // Location: .metaHub/config/vscode/settings.json
  // Sync Date: 2025-11-24
  // ============================================

  // Editor - Core Settings
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.inlineSuggest.enabled": true,
  "editor.quickSuggestions": {
    "other": "inline",
    "comments": false,
    "strings": false
  },
  "editor.minimap.enabled": false,
  "editor.codeLens": false,
  "editor.suggest.preview": false,
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.stablePeek": true,
  "editor.gotoLocation.multipleDefinitions": "peek",
  "editor.gotoLocation.multipleImplementations": "peek",
  "editor.gotoLocation.multipleTypeDefinitions": "peek",
  "editor.gotoLocation.multipleReferences": "peek",

  // Files - Watching & Performance
  "files.autoSave": "onFocusChange",
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/.git/**": true,
    "**/.next/**": true,
    "**/venv/**": true,
    "**/__pycache__/**": true,
    "**/build/**": true,
    "**/.cache/**": true,
    "**/.turbo/**": true,
    "**/coverage/**": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true,
    "**/.next": true,
    "**/__pycache__": true,
    "**/.cache": true,
    "**/.turbo": true
  },
  "files.associations": {
    "*.js": "javascript",
    "*.ts": "typescript",
    "*.json": "jsonc",
    "*.jsx": "javascriptreact",
    "*.tsx": "typescriptreact"
  },

  // Search Optimization
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.git": true,
    "**/.next": true,
    "**/venv": true,
    "**/__pycache__": true,
    "**/build": true,
    "**/.cache": true,
    "**/.turbo": true,
    "**/coverage": true
  },

  // TypeScript - Optimizations
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.tsserver.maxTsServerMemory": 4096,
  "typescript.suggest.completeFunctionCalls": false,
  "typescript.disableAutomaticTypeAcquisition": true,
  "typescript.updateImportsOnFileMove.enabled": "never",

  // JavaScript - Optimizations
  "javascript.suggest.completeFunctionCalls": false,
  "javascript.updateImportsOnFileMove.enabled": "never",

  // ESLint - Validation
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],

  // Python - Optimizations
  "python.analysis.indexing": false,
  "python.analysis.autoSearchPaths": false,
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.diagnosticMode": "openFilesOnly",
  "python.analysis.diagnosticSeverityOverrides": {
    "reportUnusedImport": "none",
    "reportUnusedVariable": "none",
    "reportMissingImports": "warning"
  },

  // Git - Optimizations
  "git.autofetch": false,
  "git.decorations.enabled": true,
  "git.enableSmartCommit": true,

  // GitLens - Disable Heavy Features
  "gitlens.hovers.enabled": false,
  "gitlens.codeLens.enabled": false,

  // Workbench - UI & Performance
  "workbench.startupEditor": "none",
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.enablePreviewFromCodeNavigation": false,
  "workbench.editor.openPositioning": "right",
  "workbench.editor.closeEmptyGroups": true,
  "workbench.editor.showTabs": "multiple",
  "workbench.editor.revealIfOpen": false,
  "workbench.editor.restoreViewState": true,
  "workbench.panel.opensMaximized": "never",
  "workbench.list.openMode": "doubleClick",
  "workbench.colorCustomizations": {},

  // Window - Behavior
  "window.openFilesInNewWindow": "off",
  "window.openFoldersInNewWindow": "off",
  "window.restoreWindows": "preserve",

  // Explorer - Navigation
  "explorer.openEditors.visible": 0,
  "explorer.autoReveal": false,

  // Debug - Focus
  "debug.focusWindowOnBreakpoints": false,

  // Problems - Auto Reveal
  "problems.autoReveal": false,

  // Merge Editor
  "mergeEditor.enabled": false,

  // Telemetry - Privacy
  "telemetry.telemetryLevel": "off",
  "extensions.autoCheckUpdates": false,
  "extensions.autoUpdate": false,

  // JSON
  "json.maxItemsComputed": 5000,

  // Language-Specific Formatters
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Governance - Project Standards
  "governance.enabled": true,
  "governance.autoFix": true,
  "governance.validateOnSave": true,

  // Terminal - Integration
  "terminal.integrated.shellIntegration.enabled": true,
  "terminal.integrated.confirmOnExit": "never",
  "terminal.integrated.confirmOnKill": "never",
  "terminal.integrated.enablePersistentSessions": false,
  "terminal.integrated.persistentSessionReviveProcess": "never",

  // Git - Workflow Settings
  "git.confirmSync": false,
  "git.confirmEmptyCommits": false,
  "git.allowForcePush": true,
  "git.allowNoVerifyCommit": true,

  // Security - Workspace Trust
  "security.workspace.trust.enabled": false,
  "security.workspace.trust.banner": "never",
  "security.workspace.trust.emptyWindow": false,
  "security.workspace.trust.startupPrompt": "never",

  // Tasks - Automation
  "task.allowAutomaticTasks": "on",
  "task.quickOpen.showAll": true,

  // Explorer - Confirmations
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.enableDragAndDrop": true,

  // Search - Enhanced
  "search.showLineNumbers": true,
  "search.smartCase": true
}

