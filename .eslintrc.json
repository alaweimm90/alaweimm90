{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "error",
    "no-console": "warn",
    "prefer-const": "error",
    "no-var": "error"
  },
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx"
      ],
      "parser": "@typescript-eslint/parser",
      "plugins": [
        "@typescript-eslint"
      ],
      "extends": [
        "plugin:@typescript-eslint/recommended"
      ]
    },
    {
      "files": [
        "tests/**/*.test.js",
        "**/__tests__/**/*.js",
        "**/*.test.js"
      ],
      "env": {
        "jest": true,
        "node": true
      },
      "plugins": [
        "jest"
      ],
      "extends": [
        "plugin:jest/recommended"
      ]
    }
  ],
  "ignorePatterns": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "**/dist/**",
    "**/build/**",
    "scripts/**",
    "alaweimm90/**",
    ".metaHub/**",
    ".organizations/**",
    ".tools/automation/**"
  ]
}
