{
  "_metadata": {
    "version": "1.0.0",
    "framework": "HIPAA",
    "description": "HIPAA Compliance Configuration Template for TRAE Routing",
    "focus": "Protected Health Information (PHI) protection and healthcare data compliance",
    "lastUpdated": "2025-11-22",
    "productionReady": true,
    "frameworkAgnostic": true
  },
  "compliance": {
    "enabledFrameworks": ["HIPAA"],
    "strictMode": true,
    "auditLevel": "detailed",
    "dataHandling": {
      "encryptionRequired": true,
      "anonymizationRequired": true,
      "retentionLimits": {
        "phi": 2555,
        "medical_records": 2555,
        "audit_logs": 2555
      },
      "crossBorderTransferAllowed": false,
      "dataLocalizationRequired": true
    },
    "geographicCompliance": {
      "restrictedRegions": ["china", "russia", "iran", "north_korea"],
      "dataLocalizationRequired": true,
      "sovereigntyRequirements": {
        "north_america": ["HIPAA"]
      }
    },
    "auditSettings": {
      "logRetention": 2555,
      "realTimeMonitoring": true,
      "alertOnViolation": true,
      "complianceReporting": true,
      "breachNotification": {
        "enabled": true,
        "timeframeDays": 60,
        "recipients": ["OCR", "affected_individuals"],
        "automatedReporting": true
      }
    }
  },
  "dataClassification": {
    "phi": {
      "patterns": [
        "\\b\\d{3}[-.]?\\d{3}[-.]?\\d{4}\\b",
        "\\b\\d{3}[-]\\d{2}[-]\\d{4}\\b",
        "\\b\\d{1,2}/\\d{1,2}/\\d{4}\\b",
        "\\b[A-Z][a-z]+ [A-Z][a-z]+\\b",
        "\\b(diagnosis|treatment|medication|condition|PHI)\\b",
        "\\b\\d{9}\\b"
      ],
      "riskLevel": "high",
      "encryptionRequired": true,
      "accessLogging": true,
      "retentionDays": 2555
    },
    "healthcare_data": {
      "patterns": ["\\b(medical|health|patient|clinical)\\b", "\\b(MRN|patient_id|health_id)\\b"],
      "riskLevel": "high",
      "encryptionRequired": true,
      "accessLogging": true,
      "retentionDays": 2555
    }
  },
  "routingRules": {
    "complianceFirstRouting": true,
    "dataClassificationRouting": true,
    "geographicComplianceRouting": true,
    "phiDetectionEnabled": true,
    "breachPreventionMode": true
  },
  "geographicRestrictions": {
    "allowedRegions": ["north_america"],
    "blockedRegions": ["china", "russia", "iran", "north_korea"],
    "dataLocalization": {
      "phi": "north_america",
      "healthcare_data": "north_america"
    },
    "crossBorderRules": {
      "requiresBAARegistration": true,
      "standardContractualClauses": true,
      "bindingCorporateRules": true
    }
  },
  "accessControls": {
    "roleBasedAccess": {
      "admin": {
        "phi": ["read", "write", "delete"],
        "healthcare_data": ["read", "write"]
      },
      "clinician": {
        "phi": ["read", "write"],
        "healthcare_data": ["read", "write"]
      },
      "billing_staff": {
        "phi": ["read"],
        "healthcare_data": ["read", "write"]
      },
      "researcher": {
        "phi": ["read"],
        "healthcare_data": ["read"]
      }
    },
    "minimumAccessPrinciple": true,
    "accessLogging": true,
    "sessionTimeout": 1800
  },
  "auditLogging": {
    "events": [
      "data_access",
      "data_modification",
      "data_deletion",
      "authentication",
      "authorization_failure",
      "phi_detection",
      "breach_attempt",
      "geographic_violation"
    ],
    "retentionPeriod": 2555,
    "tamperProof": true,
    "realTimeAlerts": true,
    "automatedReview": true
  },
  "breachDetection": {
    "phiPatterns": true,
    "unusualAccessPatterns": true,
    "geographicAnomalies": true,
    "encryptionFailures": true,
    "notificationSettings": {
      "immediateAlert": true,
      "ocrNotification": true,
      "affectedIndividuals": true,
      "timeframeDays": 60
    }
  },
  "encryption": {
    "requiredForPHI": true,
    "algorithm": "AES-256-GCM",
    "keyRotationDays": 365,
    "envelopeEncryption": true,
    "hsmRequired": false
  },
  "monitoring": {
    "realTimeCompliance": true,
    "phiDetectionAlerts": true,
    "accessViolationAlerts": true,
    "geographicViolationAlerts": true,
    "dashboardEnabled": true,
    "reportingFrequency": "daily"
  },
  "integration": {
    "traeRouting": {
      "phiAwareRouting": true,
      "complianceValidation": true,
      "auditIntegration": true
    },
    "externalSystems": {
      "ehr_integration": true,
      "ocr_reporting": true,
      "audit_systems": true
    }
  },
  "validationRules": {
    "preFlightChecks": [
      "phi_detection",
      "geographic_compliance",
      "access_authorization",
      "encryption_verification"
    ],
    "postProcessingValidation": [
      "audit_log_verification",
      "retention_compliance",
      "breach_detection"
    ]
  },
  "_comments": {
    "compliance": "HIPAA-specific compliance settings and requirements",
    "dataClassification": "PHI and healthcare data detection patterns",
    "routingRules": "Compliance-aware routing behavior",
    "geographicRestrictions": "US-focused data localization requirements",
    "accessControls": "Role-based access control for healthcare data",
    "auditLogging": "Comprehensive audit trail requirements",
    "breachDetection": "Automated breach detection and notification",
    "encryption": "PHI encryption requirements",
    "monitoring": "Real-time compliance monitoring",
    "integration": "TRAE routing and external system integration",
    "validationRules": "Pre and post-processing compliance validation"
  }
}
