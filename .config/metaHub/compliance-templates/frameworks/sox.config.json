{
  "_metadata": {
    "version": "1.0.0",
    "framework": "SOX",
    "description": "SOX Compliance Configuration Template for TRAE Routing",
    "focus": "Financial reporting controls and corporate governance",
    "lastUpdated": "2025-11-22",
    "productionReady": true,
    "frameworkAgnostic": true
  },
  "compliance": {
    "enabledFrameworks": ["SOX"],
    "strictMode": true,
    "auditLevel": "detailed",
    "dataHandling": {
      "encryptionRequired": true,
      "anonymizationRequired": false,
      "retentionLimits": {
        "financial_data": 2555,
        "audit_logs": 2555,
        "control_activities": 2555
      },
      "crossBorderTransferAllowed": true,
      "dataLocalizationRequired": false
    },
    "geographicCompliance": {
      "restrictedRegions": [],
      "dataLocalizationRequired": false,
      "sovereigntyRequirements": {}
    },
    "auditSettings": {
      "logRetention": 2555,
      "realTimeMonitoring": true,
      "alertOnViolation": true,
      "complianceReporting": true,
      "annualAssessment": {
        "enabled": true,
        "automatedScheduling": true,
        "externalAuditor": true
      }
    }
  },
  "dataClassification": {
    "financial_reporting": {
      "patterns": [
        "\\b(revenue|profit|loss|assets|liabilities|equity)\\b",
        "\\b(financial_statement|balance_sheet|income_statement)\\b",
        "\\b(SEC|10-K|10-Q|8-K)\\b"
      ],
      "riskLevel": "critical",
      "encryptionRequired": true,
      "accessLogging": true,
      "retentionDays": 2555
    },
    "internal_controls": {
      "patterns": [
        "\\b(control|audit|compliance|governance)\\b",
        "\\b(risk|assessment|monitoring|testing)\\b"
      ],
      "riskLevel": "high",
      "encryptionRequired": true,
      "accessLogging": true,
      "retentionDays": 2555
    }
  },
  "routingRules": {
    "complianceFirstRouting": true,
    "dataClassificationRouting": true,
    "geographicComplianceRouting": false,
    "financialDataProtection": true,
    "controlEnvironmentEnforced": true
  },
  "geographicRestrictions": {
    "allowedRegions": ["north_america"],
    "blockedRegions": [],
    "dataLocalization": {},
    "crossBorderRules": {
      "adequacyDecision": false,
      "standardContractualClauses": false,
      "bindingCorporateRules": false
    }
  },
  "accessControls": {
    "roleBasedAccess": {
      "ceo_cfo": {
        "financial_reporting": ["read", "write"],
        "internal_controls": ["read"]
      },
      "controller": {
        "financial_reporting": ["read", "write"],
        "internal_controls": ["read", "write"]
      },
      "auditor": {
        "financial_reporting": ["read"],
        "internal_controls": ["read", "write"]
      },
      "accounting_staff": {
        "financial_reporting": ["read", "write"],
        "internal_controls": ["read"]
      }
    },
    "minimumAccessPrinciple": true,
    "accessLogging": true,
    "sessionTimeout": 1800,
    "segregationOfDuties": true
  },
  "auditLogging": {
    "events": [
      "financial_data_access",
      "financial_data_modification",
      "control_change",
      "audit_activity",
      "system_change",
      "user_access"
    ],
    "retentionPeriod": 2555,
    "tamperProof": true,
    "realTimeAlerts": true,
    "automatedReview": true
  },
  "internalControls": {
    "enabled": true,
    "controlActivities": [
      "access_controls",
      "change_management",
      "backup_recovery",
      "incident_response"
    ],
    "monitoring": {
      "automated": true,
      "frequency": "continuous",
      "alerts": true
    },
    "testing": {
      "frequency": "quarterly",
      "automated": true,
      "documentation": true
    }
  },
  "encryption": {
    "requiredForFinancialData": true,
    "algorithm": "AES-256-GCM",
    "keyRotationDays": 365,
    "envelopeEncryption": true,
    "hsmRequired": false
  },
  "monitoring": {
    "realTimeCompliance": true,
    "financialDataAlerts": true,
    "controlViolationAlerts": true,
    "auditAlerts": true,
    "dashboardEnabled": true,
    "reportingFrequency": "quarterly"
  },
  "integration": {
    "traeRouting": {
      "soxAwareRouting": true,
      "controlIntegration": true,
      "auditIntegration": true
    },
    "externalSystems": {
      "erp_integration": true,
      "audit_systems": true,
      "governance_tools": true
    }
  },
  "validationRules": {
    "preFlightChecks": ["access_authorization", "control_verification", "audit_trail_check"],
    "postProcessingValidation": [
      "control_effectiveness",
      "audit_log_verification",
      "retention_compliance"
    ]
  },
  "_comments": {
    "compliance": "SOX-specific compliance settings",
    "dataClassification": "Financial reporting and internal control data",
    "routingRules": "SOX-aware routing behavior",
    "accessControls": "Role-based access with segregation of duties",
    "auditLogging": "Comprehensive audit trail for SOX",
    "internalControls": "SOX internal control framework",
    "encryption": "Financial data encryption requirements",
    "monitoring": "Continuous compliance monitoring",
    "integration": "TRAE routing and external system integration",
    "validationRules": "Pre and post-processing compliance validation"
  }
}
