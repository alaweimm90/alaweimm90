{
  "_metadata": {
    "version": "1.0.0",
    "framework": "SOC2",
    "description": "SOC 2 Compliance Configuration Template for TRAE Routing",
    "focus": "Security, availability, and confidentiality controls",
    "lastUpdated": "2025-11-22",
    "productionReady": true,
    "frameworkAgnostic": true
  },
  "compliance": {
    "enabledFrameworks": ["SOC2"],
    "strictMode": true,
    "auditLevel": "detailed",
    "dataHandling": {
      "encryptionRequired": true,
      "anonymizationRequired": false,
      "retentionLimits": {
        "audit_logs": 2555,
        "security_events": 2555,
        "access_logs": 2555
      },
      "crossBorderTransferAllowed": true,
      "dataLocalizationRequired": false
    },
    "geographicCompliance": {
      "restrictedRegions": [],
      "dataLocalizationRequired": false,
      "sovereigntyRequirements": {}
    },
    "auditSettings": {
      "logRetention": 2555,
      "realTimeMonitoring": true,
      "alertOnViolation": true,
      "complianceReporting": true,
      "continuousAuditing": {
        "enabled": true,
        "frequency": "real_time",
        "automatedReporting": true
      }
    }
  },
  "trustServicesCriteria": {
    "security": {
      "enabled": true,
      "controls": [
        "access_control",
        "encryption",
        "network_security",
        "monitoring",
        "incident_response"
      ]
    },
    "availability": {
      "enabled": true,
      "controls": [
        "system_availability",
        "capacity_management",
        "disaster_recovery",
        "performance_monitoring"
      ],
      "targetUptime": 0.995
    },
    "confidentiality": {
      "enabled": true,
      "controls": [
        "data_classification",
        "encryption",
        "access_controls",
        "data_handling_procedures"
      ]
    },
    "privacy": {
      "enabled": false,
      "controls": []
    },
    "processing_integrity": {
      "enabled": false,
      "controls": []
    }
  },
  "dataClassification": {
    "confidential": {
      "patterns": [
        "\\b(confidential|secret|proprietary|internal)\\b",
        "\\b(trade_secret|intellectual_property)\\b"
      ],
      "riskLevel": "high",
      "encryptionRequired": true,
      "accessLogging": true,
      "retentionDays": 2555
    },
    "internal": {
      "patterns": ["\\b(internal|private|restricted)\\b"],
      "riskLevel": "medium",
      "encryptionRequired": false,
      "accessLogging": true,
      "retentionDays": 2555
    }
  },
  "routingRules": {
    "complianceFirstRouting": true,
    "dataClassificationRouting": true,
    "geographicComplianceRouting": false,
    "continuousMonitoringEnabled": true,
    "availabilityOptimization": true
  },
  "geographicRestrictions": {
    "allowedRegions": ["north_america", "europe", "asia_pacific"],
    "blockedRegions": [],
    "dataLocalization": {},
    "crossBorderRules": {
      "adequacyDecision": false,
      "standardContractualClauses": false,
      "bindingCorporateRules": false
    }
  },
  "accessControls": {
    "roleBasedAccess": {
      "administrator": {
        "confidential": ["read", "write", "delete"],
        "internal": ["read", "write", "delete"]
      },
      "auditor": {
        "confidential": ["read"],
        "internal": ["read"]
      },
      "user": {
        "confidential": ["read"],
        "internal": ["read", "write"]
      }
    },
    "minimumAccessPrinciple": true,
    "accessLogging": true,
    "sessionTimeout": 1800,
    "multiFactorRequired": true
  },
  "continuousMonitoring": {
    "enabled": true,
    "metrics": [
      "system_availability",
      "access_attempts",
      "security_events",
      "performance_metrics",
      "error_rates"
    ],
    "alerts": {
      "availability_threshold": 0.995,
      "security_incidents": true,
      "unauthorized_access": true,
      "system_failures": true
    },
    "reporting": {
      "frequency": "real_time",
      "recipients": ["security_team", "auditors"],
      "automated": true
    }
  },
  "auditLogging": {
    "events": [
      "access_granted",
      "access_denied",
      "security_event",
      "system_change",
      "data_modification",
      "authentication",
      "authorization"
    ],
    "retentionPeriod": 2555,
    "tamperProof": true,
    "realTimeAlerts": true,
    "automatedReview": true,
    "evidenceCollection": true
  },
  "incidentResponse": {
    "enabled": true,
    "detection": {
      "automated": true,
      "thresholds": {
        "failed_logins": 5,
        "suspicious_activity": true,
        "system_anomalies": true
      }
    },
    "response": {
      "escalation_procedure": true,
      "containment_steps": true,
      "recovery_procedures": true,
      "communication_plan": true
    },
    "reporting": {
      "internal_notification": true,
      "external_reporting": true,
      "documentation": true
    }
  },
  "encryption": {
    "requiredForConfidential": true,
    "algorithm": "AES-256-GCM",
    "keyRotationDays": 365,
    "envelopeEncryption": true,
    "hsmRequired": false
  },
  "monitoring": {
    "realTimeCompliance": true,
    "securityEventAlerts": true,
    "availabilityAlerts": true,
    "auditAlerts": true,
    "dashboardEnabled": true,
    "reportingFrequency": "daily"
  },
  "integration": {
    "traeRouting": {
      "soc2AwareRouting": true,
      "continuousMonitoring": true,
      "auditIntegration": true
    },
    "externalSystems": {
      "siem_integration": true,
      "audit_systems": true,
      "monitoring_tools": true
    }
  },
  "validationRules": {
    "preFlightChecks": ["access_authorization", "encryption_verification", "monitoring_validation"],
    "postProcessingValidation": [
      "audit_log_verification",
      "availability_check",
      "security_assessment"
    ]
  },
  "_comments": {
    "compliance": "SOC 2-specific compliance settings",
    "trustServicesCriteria": "SOC 2 trust services criteria implementation",
    "dataClassification": "Confidential and internal data classification",
    "routingRules": "SOC 2-aware routing behavior",
    "accessControls": "Role-based access control with MFA",
    "continuousMonitoring": "Real-time monitoring and alerting",
    "auditLogging": "Comprehensive audit trail for SOC 2",
    "incidentResponse": "Automated incident detection and response",
    "encryption": "Data encryption requirements",
    "monitoring": "Continuous compliance monitoring",
    "integration": "TRAE routing and external system integration",
    "validationRules": "Pre and post-processing compliance validation"
  }
}
