  "dataClassification": {
    "confidential": {
      "patterns": [
        "\\b(confidential|secret|proprietary|restricted)\\b",
        "\\b(trade_secret|intellectual_property|sensitive)\\b"
      ],
      "riskLevel": "high",
      "encryptionRequired": true,
      "accessLogging": true,
      "retentionDays": 2555
    },
    "internal": {
      "patterns": ["\\b(internal|private|company_confidential)\\b"],
      "riskLevel": "medium",
      "encryptionRequired": false,
      "accessLogging": true,
      "retentionDays": 2555
    }
  },
  "routingRules": {
    "complianceFirstRouting": true,
    "dataClassificationRouting": true,
    "geographicComplianceRouting": false,
    "riskBasedRouting": true,
    "securityControlEnforced": true
  },
  "geographicRestrictions": {
    "allowedRegions": ["north_america", "europe", "asia_pacific"],
    "blockedRegions": [],
    "dataLocalization": {},
    "crossBorderRules": {
      "adequacyDecision": false,
      "standardContractualClauses": false,
      "bindingCorporateRules": false
    }
  },
  "accessControls": {
    "roleBasedAccess": {
      "information_security_officer": {
        "confidential": ["read", "write", "delete"],
        "internal": ["read", "write", "delete"]
      },
      "system_administrator": {
        "confidential": ["read", "write"],
        "internal": ["read", "write", "delete"]
      },
      "user": {
        "confidential": ["read"],
        "internal": ["read", "write"]
      }
    },
    "minimumAccessPrinciple": true,
    "accessLogging": true,
    "sessionTimeout": 1800,
    "multiFactorRequired": true
  },
  "riskManagement": {
    "enabled": true,
    "assessmentFrequency": "annual",
    "riskRegister": true,
    "treatmentPlans": true,
    "monitoring": {
      "continuous": true,
      "thresholdAlerts": true
    }
  },
  "auditLogging": {
    "events": [
      "access_attempt",
      "security_event",
      "system_change",
      "risk_assessment",
      "control_failure",
      "incident_response"
    ],
    "retentionPeriod": 2555,
    "tamperProof": true,
    "realTimeAlerts": true,
    "automatedReview": true
  },
  "incidentManagement": {
    "enabled": true,
    "detection": {
      "automated": true,
      "thresholds": true
    },
    "response": {
      "escalation_procedure": true,
      "containment_steps": true,
      "recovery_procedures": true
    },
    "reporting": {
      "internal_notification": true,
      "external_reporting": true,
      "lessons_learned": true
    }
  },
  "encryption": {
    "requiredForConfidential": true,
    "algorithm": "AES-256-GCM",
    "keyRotationDays": 365,
    "envelopeEncryption": true,
    "hsmRequired": false
  },
  "monitoring": {
    "realTimeCompliance": true,
    "securityEventAlerts": true,
    "controlFailureAlerts": true,
    "riskAlerts": true,
    "dashboardEnabled": true,
    "reportingFrequency": "annual"
  },
  "integration": {
    "traeRouting": {
      "iso27001AwareRouting": true,
      "riskAssessment": true,
      "auditIntegration": true
    },
    "externalSystems": {
      "isms_software": true,
      "audit_systems": true,
      "risk_management": true
    }
  },
  "validationRules": {
    "preFlightChecks": ["access_authorization", "risk_assessment", "control_verification"],
    "postProcessingValidation": [
      "audit_log_verification",
      "control_effectiveness",
      "risk_monitoring"
    ]
