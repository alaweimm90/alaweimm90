{
  "_metadata": {
    "version": "1.0.0",
    "industry": "Financial Services",
    "description": "Financial Services Industry Compliance Configuration Template",
    "frameworks": ["SOX", "SOC2", "PCI_DSS"],
    "focus": "Financial reporting, trust services, and payment card security",
    "lastUpdated": "2025-11-22",
    "productionReady": true,
    "frameworkAgnostic": true
  },
  "compliance": {
    "enabledFrameworks": ["SOX", "SOC2", "PCI_DSS"],
    "strictMode": true,
    "auditLevel": "detailed",
    "dataHandling": {
      "encryptionRequired": true,
      "anonymizationRequired": true,
      "retentionLimits": {
        "financial_data": 2555,
        "cardholder_data": 2555,
        "audit_logs": 2555,
        "security_events": 2555
      },
      "crossBorderTransferAllowed": true,
      "dataLocalizationRequired": false
    },
    "geographicCompliance": {
      "restrictedRegions": ["china", "russia"],
      "dataLocalizationRequired": false,
      "sovereigntyRequirements": {}
    },
    "auditSettings": {
      "logRetention": 2555,
      "realTimeMonitoring": true,
      "alertOnViolation": true,
      "complianceReporting": true,
      "annualAudit": {
        "enabled": true,
        "externalAuditor": true,
        "certificationMaintenance": true
      },
      "quarterlyScan": {
        "enabled": true,
        "automatedScheduling": true,
        "approvedScanner": true
      },
      "continuousAuditing": {
        "enabled": true,
        "frequency": "real_time",
        "automatedReporting": true
      }
    }
  },
  "dataClassification": {
    "financial_reporting": {
      "patterns": [
        "\\b(revenue|profit|loss|assets|liabilities|equity)\\b",
        "\\b(financial_statement|balance_sheet|income_statement)\\b",
        "\\b(SEC|10-K|10-Q|8-K)\\b"
      ],
      "riskLevel": "critical",
      "encryptionRequired": true,
      "accessLogging": true,
      "retentionDays": 2555,
      "soxCompliance": true,
      "soc2Compliance": true,
      "pciCompliance": false
    },
    "cardholder_data": {
      "patterns": [
        "\\b\\d{13,19}\\b",
        "\\b\\d{3,4}\\b",
        "%[A-Z0-9]+\\?",
        "\\b\\d{1,2}/\\d{1,2}\\b"
      ],
      "riskLevel": "critical",
      "encryptionRequired": true,
      "maskingRequired": true,
      "accessLogging": true,
      "retentionDays": 2555,
      "soxCompliance": false,
      "soc2Compliance": true,
      "pciCompliance": true
    },
    "confidential": {
      "patterns": [
        "\\b(confidential|secret|proprietary|internal)\\b",
        "\\b(trade_secret|intellectual_property)\\b"
      ],
      "riskLevel": "high",
      "encryptionRequired": true,
      "accessLogging": true,
      "retentionDays": 2555,
      "soxCompliance": true,
      "soc2Compliance": true,
      "pciCompliance": false
    }
  },
  "routingRules": {
    "complianceFirstRouting": true,
    "dataClassificationRouting": true,
    "geographicComplianceRouting": false,
    "financialDataProtection": true,
    "cardholderDataDetection": true,
    "continuousMonitoringEnabled": true,
    "controlEnvironmentEnforced": true,
    "paymentSecurityEnforced": true
  },
  "geographicRestrictions": {
    "allowedRegions": ["north_america", "europe"],
    "blockedRegions": ["china", "russia"],
    "dataLocalization": {},
    "crossBorderRules": {
      "adequacyDecision": false,
      "standardContractualClauses": true,
      "bindingCorporateRules": false
    }
  },
  "accessControls": {
    "roleBasedAccess": {
      "ceo_cfo": {
        "financial_reporting": ["read", "write"],
        "cardholder_data": [],
        "confidential": ["read"]
      },
      "controller": {
        "financial_reporting": ["read", "write"],
        "cardholder_data": [],
        "confidential": ["read", "write"]
      },
      "payment_processor": {
        "financial_reporting": [],
        "cardholder_data": ["read", "write"],
        "confidential": ["read"]
      },
      "auditor": {
        "financial_reporting": ["read"],
        "cardholder_data": [],
        "confidential": ["read", "write"]
      },
      "compliance_officer": {
        "financial_reporting": ["read"],
        "cardholder_data": ["read"],
        "confidential": ["read", "write"]
      }
    },
    "minimumAccessPrinciple": true,
    "accessLogging": true,
    "sessionTimeout": 900,
    "segregationOfDuties": true,
    "twoPersonRule": true,
    "multiFactorRequired": true
  },
  "internalControls": {
    "enabled": true,
    "controlActivities": [
      "access_controls",
      "change_management",
      "backup_recovery",
      "incident_response",
      "payment_processing",
      "financial_reporting"
    ],
    "monitoring": {
      "automated": true,
      "frequency": "continuous",
      "alerts": true
    },
    "testing": {
      "frequency": "quarterly",
      "automated": true,
      "documentation": true
    }
  },
  "trustServicesCriteria": {
    "security": {
      "enabled": true,
      "controls": [
        "access_control",
        "encryption",
        "network_security",
        "monitoring",
        "incident_response"
      ]
    },
    "availability": {
      "enabled": true,
      "controls": [
        "system_availability",
        "capacity_management",
        "disaster_recovery",
        "performance_monitoring"
      ],
      "targetUptime": 0.995
    },
    "confidentiality": {
      "enabled": true,
      "controls": [
        "data_classification",
        "encryption",
        "access_controls",
        "financial_data_protection"
      ]
    }
  },
  "auditLogging": {
    "events": [
      "financial_data_access",
      "financial_data_modification",
      "cardholder_data_access",
      "control_change",
      "audit_activity",
      "security_event",
      "system_change",
      "payment_transaction",
      "authentication",
      "authorization"
    ],
    "retentionPeriod": 2555,
    "tamperProof": true,
    "realTimeAlerts": true,
    "automatedReview": true,
    "evidenceCollection": true
  },
  "encryption": {
    "requiredForFinancialData": true,
    "requiredForCardholderData": true,
    "algorithm": "AES-256",
    "keyRotationDays": 365,
    "dualControl": true,
    "keyCustodian": true,
    "envelopeEncryption": true
  },
  "monitoring": {
    "realTimeCompliance": true,
    "financialDataAlerts": true,
    "cardholderDataAlerts": true,
    "controlViolationAlerts": true,
    "securityEventAlerts": true,
    "availabilityAlerts": true,
    "dashboardEnabled": true,
    "reportingFrequency": "daily"
  },
  "integration": {
    "traeRouting": {
      "financialDataProtection": true,
      "cardholderDataDetection": true,
      "controlIntegration": true,
      "continuousMonitoring": true,
      "auditIntegration": true
    },
    "externalSystems": {
      "erp_integration": true,
      "payment_processor": true,
      "audit_systems": true,
      "siem_integration": true,
      "tokenization_service": true
    }
  },
  "validationRules": {
    "preFlightChecks": [
      "financial_data_detection",
      "cardholder_data_detection",
      "access_authorization",
      "control_verification",
      "encryption_verification"
    ],
    "postProcessingValidation": [
      "audit_log_verification",
      "control_effectiveness",
      "retention_compliance",
      "data_masking_check",
      "security_assessment"
    ]
  },
  "_comments": {
    "compliance": "Combined SOX, SOC 2, and PCI DSS compliance settings",
    "dataClassification": "Financial reporting, cardholder data, and confidential information",
    "routingRules": "Multi-framework compliance-aware routing",
    "accessControls": "Financial services role-based access with segregation of duties",
    "internalControls": "SOX internal control framework",
    "trustServicesCriteria": "SOC 2 trust services criteria",
    "auditLogging": "Comprehensive audit trail for all three frameworks",
    "encryption": "Strong encryption for financial and payment data",
    "monitoring": "Comprehensive compliance monitoring",
    "integration": "TRAE routing and financial system integration",
    "validationRules": "Pre and post-processing compliance validation"
  }
}
