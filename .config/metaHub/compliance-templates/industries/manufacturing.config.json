  "dataClassification": {
    "confidential": {
      "patterns": [
        "\\b(confidential|secret|proprietary|internal)\\b",
        "\\b(trade_secret|intellectual_property|patent)\\b"
      ],
      "riskLevel": "high",
      "encryptionRequired": true,
      "accessLogging": true,
      "retentionDays": 2555,
      "iso27001Compliance": true,
      "soc2Compliance": true
    },
    "operational_data": {
      "patterns": [
        "\\b(manufacturing|production|assembly|quality)\\b",
        "\\b(machine|equipment|sensor|iot|industrial)\\b"
      ],
      "riskLevel": "medium",
      "encryptionRequired": true,
      "accessLogging": true,
      "retentionDays": 2555,
      "iso27001Compliance": true,
      "soc2Compliance": true
    },
    "intellectual_property": {
      "patterns": [
        "\\b(design|blueprint|specification|formula)\\b",
        "\\b(research|development|innovation|proprietary)\\b"
      ],
      "riskLevel": "critical",
      "encryptionRequired": true,
      "accessLogging": true,
      "retentionDays": 2555,
      "iso27001Compliance": true,
      "soc2Compliance": true
    }
