{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Demo: Auto-Approve",
      "type": "shell",
      "command": "pwsh ./.tools/ide-auto-approve.ps1 -Command \"./.tools/demo-prompt.ps1\" -VerboseLog",
      "problemMatcher": []
    },
    {
      "label": "NPM Install (Auto-Approve)",
      "type": "shell",
      "command": "pwsh ./.tools/ide-auto-approve.ps1 -Command \"npm install\"",
      "problemMatcher": []
    },
    {
      "label": "PNPM Install (Auto-Approve)",
      "type": "shell",
      "command": "pwsh ./.tools/ide-auto-approve.ps1 -Command \"pnpm install\"",
      "problemMatcher": []
    },
    {
      "label": "Yarn Install (Auto-Approve)",
      "type": "shell",
      "command": "pwsh ./.tools/ide-auto-approve.ps1 -Command \"yarn install\"",
      "problemMatcher": []
    },
    {
      "label": "Docker Compose Up (Auto-Approve)",
      "type": "shell",
      "command": "pwsh ./.tools/ide-auto-approve.ps1 -Command \"docker compose up -d\"",
      "problemMatcher": []
    },
    {
      "label": "Kubectl Apply (Auto-Approve)",
      "type": "shell",
      "command": "pwsh ./.tools/ide-auto-approve.ps1 -Command \"kubectl apply -f ${input:manifestPath}\"",
      "problemMatcher": []
    },
    {
      "label": "Wrap Command (Auto-Approve)",
      "type": "shell",
      "command": "pwsh ./.tools/ide-auto-approve.ps1 -Command \"${input:wrappedCommand}\" -VerboseLog",
      "problemMatcher": []
    },
    {
      "label": "Wrap + Report (Auto-Approve)",
      "type": "shell",
      "command": "pwsh ./.tools/ide-auto-approve.ps1 -Command \"${input:wrappedCommand}\" -VerboseLog && pwsh ./.tools/ide-wrapper-report.ps1",
      "problemMatcher": []
    },
    {
      "label": "Wrap + Report (Markdown)",
      "type": "shell",
      "command": "pwsh ./.tools/ide-auto-approve.ps1 -Command \"${input:wrappedCommand}\" -VerboseLog && pwsh ./.tools/ide-wrapper-report.ps1 -Markdown -Open",
      "problemMatcher": []
    },
    {
      "label": "Approve Next 50 (Auto-Approve)",
      "type": "shell",
      "command": "pwsh ./.tools/ide-auto-approve.ps1 -ApproveNext 50 -Command \"${input:wrappedCommand}\"",
      "problemMatcher": []
    },
    {
      "label": "Approve Next N (Auto-Approve)",
      "type": "shell",
      "command": "pwsh ./.tools/ide-auto-approve.ps1 -ApproveNext ${input:approveCount} -Command \"${input:wrappedCommand}\"",
      "problemMatcher": []
    },
    {
      "label": "Report (Markdown, Categories)",
      "type": "shell",
      "command": "pwsh ./.tools/ide-wrapper-report.ps1 -Markdown -Open -ByCategory -GroupByDay -TopN ${input:topN}",
      "problemMatcher": []
    },
    {
      "label": "Lint (Auto-Approve)",
      "type": "shell",
      "command": "pwsh ./.tools/ide-auto-approve.ps1 -Command \"npm run lint\"",
      "problemMatcher": []
    },
    {
      "label": "Type-Check (Auto-Approve)",
      "type": "shell",
      "command": "pwsh ./.tools/ide-auto-approve.ps1 -Command \"npm run type-check\"",
      "problemMatcher": []
    },
    {
      "label": "Build (Auto-Approve)",
      "type": "shell",
      "command": "pwsh ./.tools/ide-auto-approve.ps1 -Command \"npm run build\"",
      "problemMatcher": []
    },
    {
      "label": "Test (Auto-Approve)",
      "type": "shell",
      "command": "pwsh ./.tools/ide-auto-approve.ps1 -Command \"npm test\"",
      "problemMatcher": []
    },
    {
      "label": "Docker Compose Down (Auto-Approve)",
      "type": "shell",
      "command": "pwsh ./.tools/ide-auto-approve.ps1 -Command \"docker compose down\"",
      "problemMatcher": []
    },
    {
      "label": "Kubectl Delete (Auto-Approve)",
      "type": "shell",
      "command": "pwsh ./.tools/ide-auto-approve.ps1 -Command \"kubectl delete -f ${input:manifestPath} --force --grace-period=0\"",
      "problemMatcher": []
    },
    {
      "label": "Choco Upgrade All (Auto-Approve)",
      "type": "shell",
      "command": "pwsh ./.tools/ide-auto-approve.ps1 -Command \"choco upgrade all -y\"",
      "problemMatcher": []
    },
    {
      "label": "Winget Upgrade All (Auto-Approve)",
      "type": "shell",
      "command": "pwsh ./.tools/ide-auto-approve.ps1 -Command \"winget upgrade --all --accept-source-agreements --accept-package-agreements\"",
      "problemMatcher": []
    },
    {
      "label": "Docker Compose Logs (Auto-Approve)",
      "type": "shell",
      "command": "pwsh ./.tools/ide-auto-approve.ps1 -Command \"docker compose logs -f\"",
      "problemMatcher": []
    },
    {
      "label": "Kubectl Rollout Status (Auto-Approve)",
      "type": "shell",
      "command": "pwsh ./.tools/ide-auto-approve.ps1 -Command \"kubectl rollout status deployment/${input:rolloutTarget} -n ${input:namespace}\"",
      "problemMatcher": []
    },
    {
      "label": "Wrapper Report (Auto-Approve)",
      "type": "shell",
      "command": "pwsh ./.tools/ide-wrapper-report.ps1",
      "problemMatcher": []
    },
    {
      "label": "Report (Markdown, Filtered)",
      "type": "shell",
      "command": "pwsh ./.tools/ide-wrapper-report.ps1 -Markdown -Open -Start ${input:reportStart} -End ${input:reportEnd} -Keyword ${input:reportKeyword}",
      "problemMatcher": []
    },
    {
      "label": "Docs Consolidation (Auto-Approve)",
      "type": "shell",
      "command": "pwsh ./.tools/ide-auto-approve.ps1 -ApproveNext 50 -Command \"pwsh ./.tools/docs-consolidate.ps1 -FixTitles -UpdateIndex -RemoveEmpty\" -VerboseLog",
      "problemMatcher": []
    },
    {
      "label": "Docs Consolidation (Auto-Approve)",
      "type": "shell",
      "command": "pwsh ./.tools/ide-auto-approve.ps1 -ApproveNext 50 -Command \"pwsh ./.tools/docs-consolidate.ps1 -FixTitles -UpdateIndex -RemoveEmpty\" -VerboseLog",
      "problemMatcher": []
    },
    {
      "label": "Claude LLM Bridge (Auto-Approve)",
      "type": "shell",
      "command": "pwsh ./.tools/ide-auto-approve.ps1 -Command \"pwsh ./.tools/claude-bridge.ps1 -Prompt '${input:llmPrompt}' -Rounds '${input:llmRounds}' -Mode '${input:llmMode}'\" -VerboseLog",
      "problemMatcher": []
    },
    {
      "label": "LLM Bridge Dry Run (Auto-Approve)",
      "type": "shell",
      "command": "pwsh ./.tools/ide-auto-approve.ps1 -Command \"pwsh ./.tools/claude-bridge.ps1 -Prompt '${input:llmPrompt}' -Rounds '${input:llmRounds}' -Mode '${input:llmMode}' -DryRun\" -VerboseLog",
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "manifestPath",
      "type": "promptString",
      "description": "Enter manifest path for kubectl apply",
      "default": "./k8s"
    },
    {
      "id": "wrappedCommand",
      "type": "promptString",
      "description": "Enter a command to run via auto-approve wrapper",
      "default": "npm install"
    },
    {
      "id": "namespace",
      "type": "promptString",
      "description": "Kubernetes namespace",
      "default": "default"
    },
    {
      "id": "rolloutTarget",
      "type": "promptString",
      "description": "Deployment name for rollout status",
      "default": "app"
    },
    {
      "id": "reportStart",
      "type": "promptString",
      "description": "Report start date/time (e.g., 2025-11-23 00:00)",
      "default": ""
    },
    {
      "id": "reportEnd",
      "type": "promptString",
      "description": "Report end date/time (e.g., 2025-11-23 23:59)",
      "default": ""
    },
    {
      "id": "reportKeyword",
      "type": "promptString",
      "description": "Filter prompts containing keyword",
      "default": ""
    },
    {
      "id": "approveCount",
      "type": "promptString",
      "description": "Number of prompts to auto-approve",
      "default": "10"
    },
    {
      "id": "topN",
      "type": "promptString",
      "description": "Top N prompts to include in report",
      "default": "10"
    },
    {
      "id": "llmPrompt",
      "type": "promptString",
      "description": "Prompt for LLM bridge",
      "default": "Analyze this codebase structure"
    },
    {
      "id": "llmRounds",
      "type": "promptString",
      "description": "Number of refinement rounds for LLM",
      "default": "3"
    },
    {
      "id": "llmMode",
      "type": "promptString",
