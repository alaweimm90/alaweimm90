# ============================================
# SSOT: EditorConfig for All Projects
# Location: .metaHub/config/.editorconfig
# Sync Date: 2025-11-24
# Applies to: All organizations and projects
# ============================================

root = true

# ============================================
# Default Settings (All Files)
# ============================================
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# ============================================
# Language-Specific Settings
# ============================================

# JavaScript/TypeScript/JSX/TSX
[*.{js,jsx,ts,tsx,mjs,cjs}]
indent_size = 2
max_line_length = 100

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yaml,yml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Python files
[*.py]
indent_size = 4
max_line_length = 100

# Shell scripts
[*.sh]
indent_size = 2

# Batch files (Windows)
[*.{cmd,bat,ps1}]
end_of_line = crlf
indent_size = 2

# Makefiles (must use tabs)
[Makefile]
indent_style = tab

# Go files (convention uses tabs)
[*.go]
indent_style = tab

# Ruby files
[*.rb]
indent_size = 2

# PHP files
[*.php]
indent_size = 4

# Java/Kotlin files
[*.{java,kt,kts}]
indent_size = 4

# C/C++ files
[*.{c,cpp,h,hpp,cc,hh}]
indent_size = 4

# C# files
[*.cs]
indent_size = 4

# Rust files
[*.rs]
indent_size = 4

# Swift files
[*.swift]
indent_size = 4

# Dart files
[*.dart]
indent_size = 2

# XML files
[*.{xml,xsd,xslt,svg}]
indent_size = 2

# HTML files
[*.{html,htm}]
indent_size = 2

# CSS/SCSS/LESS files
[*.{css,scss,sass,less}]
indent_size = 2

# SQL files
[*.sql]
indent_size = 2

# TOML files
[*.toml]
indent_size = 2

# INI files
[*.ini]
indent_size = 4

# Dockerfiles
[Dockerfile]
indent_size = 4

[*.dockerfile]
indent_size = 4

# Git files
[.gitattributes]
indent_size = 2

[.gitignore]
indent_size = 2

[.gitmodules]
indent_size = 2

# Git commit messages
[COMMIT_EDITMSG]
max_line_length = 72

# ============================================
# Ignore Files (No Formatting Rules)
# ============================================

# Package lock files
[package-lock.json]
insert_final_newline = false
indent_size = ignore

[yarn.lock]
insert_final_newline = false
indent_size = ignore

[pnpm-lock.yaml]
insert_final_newline = false
indent_size = ignore

# Minified files
[*.min.{js,css,html}]
indent_style = ignore
indent_size = ignore
insert_final_newline = false

# Compiled/Generated files
[*.{map,bundle.js}]
indent_style = ignore
indent_size = ignore
